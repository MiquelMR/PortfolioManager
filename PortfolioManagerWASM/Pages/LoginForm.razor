@page "/login"
@using PortfolioManagerWASM.Services.IService
@using PortfolioManagerWASM.Models.DTOs
@using System.ComponentModel.DataAnnotations
@inject IUserService UserService

<h3>Login</h3>

<EditForm Model="@UserLoginDto" OnValidSubmit="@AuthenticateUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="UserLoginDto.Email" />
        <ValidationMessage For="@(() => UserLoginDto.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="UserLoginDto.Password" />
        <ValidationMessage For="@(() => UserLoginDto.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>