@layout MainLayout
@page "/userProfile"
<h3>UserProfile</h3>
<div class="container">

    <!--Profile-->
    <div class="row">
        <div class="col-4">
            <img src="@(ActiveUser.Icon == null
                ? $"https://avatar.iran.liara.run/public"
                : $"data:image/svg+xml;base64,{ActiveUser.Icon}")" class="rounded img-fluid w-100" alt="avatar" />
        </div>

        <div class="col-8 d-flex flex-column justify-content-between">
            <div class="row">
                <div>Nombre del usuario @ActiveUser.Name</div>
            </div>
            <div class="row">
                <div>Since @ActiveUser.RegistrationDate</div>
            </div>
        </div>
    </div>

    <!--Tabs-->
    <div class="row mt-5">
        <ul class="nav nav-underline justify-content-start">
            <li class="nav-item">
                <a class="nav-link @(ActiveTab == "Public" ? "active" : "")" @onclick='() => SelectActiveTab("Public")'>Public</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ActiveTab == "Public" ? "active" : "")" @onclick='() => SelectActiveTab("Private")'>Private</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ActiveTab == "Public" ? "active" : "")" @onclick='() => SelectActiveTab("Moderator")'>Moderator</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ActiveTab == "Public" ? "active" : "")" @onclick='() => SelectActiveTab("Admin")'>Admin</a>
            </li>
        </ul>
    </div>

    <div class="tab-content">
        <!--Public-->
        <div class="tab-pane @(ActiveTab == "Public" ? "active show" : "fade")">
            <!--Username-->
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputUsername" class="col-form-label">Username</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="inputUsername" class="form-control" aria-describedby="passwordHelpInline">
                </div>
            </div>

            <!--Avatar-->
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="formFile" class="col-form-label">Avatar</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>

        </div>

        <!--Private-->
        <div class="tab-pane @(ActiveTab == "Private" ? "active show" : "fade")">

            <!--Email-->
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputEmail" class="col-form-label">Email</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="inputEmail" class="form-control" aria-describedby="passwordHelpInline">
                </div>
            </div>

            <!--Password-->
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputPassword6" class="col-form-label">Password</label>
                </div>
                <div class="col-auto">
                    <input type="password" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
                </div>
                <div class="col-auto">
                    <span id="passwordHelpInline" class="form-text">
                        Must be 8-20 characters long.
                    </span>
                </div>
            </div>

        </div>

        <!--Moderator-->
        <div class="tab-pane @(ActiveTab == "Moderator" ? "active show" : "fade")"></div>
        <!--Admin-->
        <div class="tab-pane @(ActiveTab == "Admin" ? "active show" : "fade")"></div>
    </div>
</div>