@page "/register"

<h3>Register</h3>

<EditForm Model="@RegisterFormViewModel.UserRegisterDTO" OnValidSubmit="@RegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" class="form-control" @bind-Value="RegisterFormViewModel.UserRegisterDTO.Name" />
        <ValidationMessage For="@(() => RegisterFormViewModel.UserRegisterDTO.Name)" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="RegisterFormViewModel.UserRegisterDTO.Email" />
        <ValidationMessage For="@(() => RegisterFormViewModel.UserRegisterDTO.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="RegisterFormViewModel.UserRegisterDTO.Password" />
        <ValidationMessage For="@(() => RegisterFormViewModel.UserRegisterDTO.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

<p>@RegisterFormViewModel.Message</p>
