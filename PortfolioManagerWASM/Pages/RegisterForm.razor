@page "/register"

<h3>Register</h3>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-info">
        @Message
    </div>
}

<EditForm Model="@RegisterFormDto" OnValidSubmit="@RegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" class="form-control" @bind-Value="RegisterFormDto.Name" />
        <ValidationMessage For="@(() => RegisterFormDto.Name)" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="RegisterFormDto.Email" />
        <ValidationMessage For="@(() => RegisterFormDto.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="RegisterFormDto.Password" />
        <ValidationMessage For="@(() => RegisterFormDto.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>
