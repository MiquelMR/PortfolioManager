@using Microsoft.AspNetCore.Authorization
@using PortfolioManagerWASM.Components
@using PortfolioManagerWASM.Components.Home
@using PortfolioManagerWASM.Helpers
@using PortfolioManagerWASM.Models
@using PortfolioManagerWASM.Services.IService
@attribute [Authorize]

@layout MainLayout
@page "/"
@page "/home"
<PageTitle>Home</PageTitle>

@switch (CurrentHomeView)
{
    case HomeView.CreatePortfolio:
        <CreatePortfolioComponent FinancialAssets="@FinancialAssets"
                                  OnPortfolioSubmit="@OnPortfolioSubmitDelegate"></CreatePortfolioComponent>
        break;
    case HomeView.ViewPortfolio:
        <ViewPortfoliosComponent ActivePortfolio="@ActivePortfolio"
                                 UserPortfolios="@UserPortfolios"
                                 SelectPortfolioDelegate="@SelectPortfolioDelegate"
                                 OnDeleteActivePortfolioDelegate="@OnDeleteActivePortfolio"
                                 ChangeCurrentHomeViewDelegate="@ChangeCurrentHomeView"></ViewPortfoliosComponent>
        break;
    default:
        break;
}
<!--Create new portfolio-->
@if (CurrentHomeView != HomeView.CreatePortfolio)
{
    <button class="btn btn-primary" @onclick="() =>ChangeCurrentHomeView(HomeView.CreatePortfolio)">Create Portfolio</button>
}
