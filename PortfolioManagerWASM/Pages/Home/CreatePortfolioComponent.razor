@using PortfolioManagerAPI.Helpers
@using PortfolioManagerWASM.Models
<div class="container-fluid">
    <div class="h4 m-4 ms-0">Create portfolio</div>

    <!--New Portfolio form-->
    <EditForm Model="@newPortfolio" OnValidSubmit="SubmitNewPortfolio">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="row">
            <div class="col-3 bg-body-secondary">Graphs TODO</div>
            <div class="col">
                <!--Name-->
                <InputText id="name" @bind-Value="newPortfolio.Name" />

                <!--Add Financial Asset Dropdown-->
                <div class="col-auto dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Financial Assets
                    </button>

                    <ul class="dropdown-menu">
                        <!--Financial Asset List-->
                        @foreach (FinancialAsset financialAsset in FinancialAssets)
                        {
                            <button @onclick="()=>AddFinancialAsset(financialAsset)" type="button" class="list-group-item list-group-item-action d-flex justify-content-between">@financialAsset.Name</button>
                        }
                    </ul>
                </div>
                <!--Assets-->
                @if (newPortfolio.PortfolioAssets.Count > 0)
                {
                    <ul class="col-8">
                        @foreach (PortfolioAsset portfolioAsset in newPortfolio.PortfolioAssets)
                        {
                            <li class="d-flex align-items-center mb-3">
                                <p class="m-2">@portfolioAsset.Asset.Name</p>
                                @if (portfolioAsset.Asset.IconPath != null && portfolioAsset.Asset.IconPath.Length > 0)
                                {
                                    <img src="(@portfolioAsset.Asset.IconPath)" alt="Icon" class="img-fluid asset-icon">
                                }
                                else
                                {
                                    <i class="bi bi-cash asset-icon"></i>
                                }
                                <p class="m-2">@portfolioAsset.AllocationPercentage</p>
                            </li>
                        }
                    </ul>
                }

                <!--Buttons-->
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary">Back</button>
                    </div>
                    <div class="col">
                        <input class="btn btn-primary" type="submit" value="Create" />
                    </div>
                </div>
            </div>
        </div>
    </EditForm>

</div>


