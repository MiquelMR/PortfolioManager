@using PortfolioManagerAPI.Helpers
@using PortfolioManagerWASM.Services.IService
@using Syncfusion.Blazor.SplitButtons

<!--User Profile-->
<div class="container">

    <div class="row mb-4">
        <div class="col-3">
            <div class="col userAvatar">
                <img src="@(ActiveUser.Avatar == null
        ? $"https://avatar.iran.liara.run/public"
        : $"{@TypeConverter.GetBase64String(ActiveUser.Avatar)}")" class="rounded img-fluid w-100" alt="avatar" />
            </div>
        </div>

        <div class="col">
            <div class="col">
                <div class="row">@ActiveUser.Name</div>
                <div class="row">Since RegistrationDate</div>
            </div>
        </div>
    </div>

</div>

